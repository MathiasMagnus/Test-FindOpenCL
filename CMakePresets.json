{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 25,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "layout",
			"hidden": true,
			"binaryDir": "${sourceDir}/build/${presetName}",
			"installDir": "${sourceDir}/install/${presetName}"
		},
		{
			"name": "generator-msbuild",
			"hidden": true,
			"generator": "Visual Studio 17 2022",
			"architecture": {
				"value": "x64",
				"strategy": "set"
			}
		},
		{
			"name": "generator-ninja-multi-config",
			"hidden": true,
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"CMAKE_MAKE_PROGRAM": {
					"type": "PATH",
					"value": "$env{GITHUB_WORKSPACE}/.cache/Ninja/ninja"
				}
			}
		},
		{
			"name": "toolchain-msbuild-c/c++-msvc-v143",
			"hidden": true,
			"toolset": {
				"value": "v143,host=x64",
				"strategy": "set"
			},
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl.exe",
				"CMAKE_CXX_COMPILER": "cl.exe"
			}
		},
		{
			"name": "toolchain-makefiles-c/c++-gcc",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc",
				"CMAKE_CXX_COMPILER": "g++"
			}
		},
		{
			"name": "msbuild-msvc-v143",
			"displayName": "MSBuild MSVC v143",
			"inherits": [
				"layout",
				"generator-msbuild",
				"toolchain-msbuild-c/c++-msvc-v143"
			]
		},
		{
			"name": "ninja-multi-config-gcc",
			"displayName": "Ninja Multi-Config GCC",
			"inherits": [
				"layout",
				"generator-ninja-multi-config",
				"toolchain-makefiles-c/c++-gcc"
			]
		}
	],
	"buildPresets": [
		{
			"name": "msbuild-parallel",
			"hidden": true,
			"nativeToolOptions": [
				"/maxCpuCount:$env{NUMBER_OF_PROCESSORS}"
			],
			"environment": {
				"UseMultiToolTask": "true",
				"EnforceProcessCountAcrossBuilds": "true",
				"MultiProcMaxCount": "$env{NUMBER_OF_PROCESSORS}"
			}
		},
		{
			"name": "msbuild-minimal-verbosity",
			"hidden": true,
			"nativeToolOptions": [
				"/nologo",
				"/verbosity:minimal"
			]
		},
		{
			"name": "msbuild-msvc-v143-sdk-debug",
			"displayName": "SDK only Debug",
			"configuration": "Debug",
			"configurePreset": "msbuild-msvc-v143",
			"inherits": [
				"msbuild-parallel",
				"msbuild-minimal-verbosity"
			],
			"targets": [
				"OpenCL-SDK",
				"OpenCL-SDK-DLL"
			]
		},
		{
			"name": "msbuild-msvc-v143-release",
			"displayName": "Release",
			"configuration": "Release",
			"configurePreset": "msbuild-msvc-v143",
			"inherits": [
				"msbuild-parallel",
				"msbuild-minimal-verbosity"
			]
		},
		{
			"name": "msbuild-msvc-v143-debug",
			"displayName": "Debug",
			"configuration": "Debug",
			"configurePreset": "msbuild-msvc-v143",
			"inherits": [
				"msbuild-parallel",
				"msbuild-minimal-verbosity"
			]
		},
		{
			"name": "ninja-multi-config-gcc-sdk-debug",
			"displayName": "SDK only Debug",
			"configuration": "Debug",
			"configurePreset": "ninja-multi-config-gcc",
			"targets": [
				"OpenCL-SDK",
				"OpenCL-SDK-DLL"
			]
		},
		{
			"name": "ninja-multi-config-gcc-release",
			"displayName": "Release",
			"configuration": "Release",
			"configurePreset": "ninja-multi-config-gcc"
		},
		{
			"name": "ninja-multi-config-gcc-debug",
			"displayName": "Debug",
			"configuration": "Debug",
			"configurePreset": "ninja-multi-config-gcc"
		}
	],
	"testPresets": [
		{
			"name": "msbuild-msvc-v143-debug",
			"displayName": "Debug",
			"configuration": "Debug",
			"configurePreset": "msbuild-msvc-v143",
			"environment": {
				"CTEST_PARALLEL_LEVEL": "$env{NUMBER_OF_PROCESSORS}"
			}
		},
		{
			"name": "msbuild-msvc-v143-release",
			"displayName": "Release",
			"configuration": "Release",
			"configurePreset": "msbuild-msvc-v143",
			"environment": {
				"CTEST_PARALLEL_LEVEL": "$env{NUMBER_OF_PROCESSORS}"
			}
		},
		{
			"name": "ninja-multi-config-gcc-debug",
			"displayName": "Debug",
			"configuration": "Debug",
			"configurePreset": "ninja-multi-config-gcc",
			"execution": {
				"jobs": 0
			}
		},
		{
			"name": "ninja-multi-config-gcc-release",
			"displayName": "Release",
			"configuration": "Release",
			"configurePreset": "ninja-multi-config-gcc",
			"execution": {
				"jobs": 0
			}
		}
	],
	"workflowPresets": [
		{
			"name": "msbuild-msvc-v143",
			"displayName": "MSBuild MSVC v143",
			"steps": [
				{
					"type": "configure",
					"name": "msbuild-msvc-v143"
				},
				{
					"type": "build",
					"name": "msbuild-msvc-v143-sdk-debug"
				},
				{
					"type": "build",
					"name": "msbuild-msvc-v143-release"
				},
				{
					"type": "build",
					"name": "msbuild-msvc-v143-debug"
				},
				{
					"type": "test",
					"name": "msbuild-msvc-v143-release"
				},
				{
					"type": "test",
					"name": "msbuild-msvc-v143-debug"
				}
			]
		},
		{
			"name": "ninja-multi-config-gcc",
			"displayName": "Ninja Multi-Config GCC",
			"steps": [
				{
					"type": "configure",
					"name": "ninja-multi-config-gcc"
				},
				{
					"type": "build",
					"name": "ninja-multi-config-gcc-sdk-debug"
				},
				{
					"type": "build",
					"name": "ninja-multi-config-gcc-release"
				},
				{
					"type": "build",
					"name": "ninja-multi-config-gcc-debug"
				},
				{
					"type": "test",
					"name": "ninja-multi-config-gcc-release"
				},
				{
					"type": "test",
					"name": "ninja-multi-config-gcc-debug"
				}
			]
		}
	]
}